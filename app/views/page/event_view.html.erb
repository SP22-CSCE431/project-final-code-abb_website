<% @page_title = "ABB Events" %>
<%= stylesheet_link_tag 'events' %>
<% content_for :main do %>
<main>
    <%= render :partial => 'page/nav_bar' %>
    <form action="" method="POST">
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Event</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    <label for="">Event name:</label>
                    <input type="text" class="form-control" id="exampleInputEventName" aria-describedby="emailHelp" placeholder="Event name">
                    <br>
                    <label for="">Date:</label>
                    <input type="date" class="form-control" id="exampleInputDate" aria-describedby="dateHelp">
                    <br>
                    <label for="">Time:</label>
                    <input type="text" class="form-control" id="exampleInputTime" aria-describedby="timeHelp" placeholder="Time">
                    <br>
                    <label for="">Location:</label>
                    <input type="text" class="form-control" id="exampleInputLocation" aria-describedby="locationHelp" placeholder="400 Bizzell St">
                    <br>
                    <label for="">Event Type:</label>
                    <input type="text" class="form-control" id="exampleInputType" aria-describedby="locationHelp" placeholder="Event Type">
                    <br>
                    <label for="">Description:</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                    <br>
                    <label for="">Password:</label>
                    <input type="password" class="form-control" id="exampleInputPassword" aria-describedby="passwordHelp" placeholder="Password">
                    <br>
                    <label for="">Confirm Password:</label>
                    <input type="password" class="form-control" id="exampleInputPassword" aria-describedby="passwordHelp" placeholder="Confirm Password">
                
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
            </div>
        </div>
    </form>
    <div class="container">
        <div class = "row first-row make-f">
            <p class="tamu-row-1">Texas A&Mâ€™s Professional Brotherhood</p>
            <h2>Member Events</h2>
        </div>
        <div class="row second-row-events">
            <div class="mask-snow"></div>
            <%= image_tag "events_pictures/tamu_overview.jpg", :class => "tamu-overview" %>
            <iframe src="https://calendar.google.com/calendar/embed?src=olsisadiku%40tamu.edu&ctz=America%2FChicago" style="border: 0" width="800" height="600" frameborder="0" scrolling="no"></iframe>
            <div class="button-div">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    Create Event
                </button>
            </div>
        </div>
        
        
    </div>
</main>

<% end %>