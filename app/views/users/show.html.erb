<% provide(:page_title, @user.name) %>

<div>
  <strong>Name:</strong>
  <%= @user.name %>
</div>
<div>
  <strong>major:</strong>
  <%= @user.major %>
</div>
<div>
  <strong>email:</strong>
  <%= @user.email %>
</div>
<div>
  <strong>position:</strong>
  <%= @user.position %>
</div>
<div>
  <strong>service_points:</strong>
  <%= @user.service_points %>
</div>
<div>
  <strong>brother_points:</strong>
  <%= @user.brother_points %>
</div>
<div>
  <strong>social_points:</strong>
  <%= @user.social_points %>
</div>
<div>
  <strong>study_hours:</strong>
  <%= @user.study_hours %>
</div>
<div>
  <strong>image_url:</strong>
  <%= @user.image_url %>
</div>
  <% if (!current_admin.nil? || current_user.is_admin) %>
    <div class="field">
      <strong>Is_admin:</strong>
       <%= @user.is_admin %>
    </div>

  <% end %>
<div>
  <strong>User Image:</strong>
    <% if @user.image.attached? %>
      <%= image_tag @user.image, width: "50px", height: "50px" %>
    <% else %>
      <%= image_tag 'defaultProf.jpg', width: "50px", height: "50px" %>
    <% end %>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
<%= link_to("Back To Points", {:controller => 'membership', :action => 'points'})%>
<%= link_to 'Home', root_url %>
<% if !current_admin.nil? || current_user.is_admin %>
  <%= link_to "delete", @user, method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>